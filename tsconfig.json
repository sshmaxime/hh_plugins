{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "rootDirs": ["./src", "./test"],
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false // override strict's default
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./test", "./src"]
}
