{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "rootDirs": ["./src", "./test"],
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
        "noImplicitAny": false
    },
    "include": ["./src"],
    "exclude": ["dist", "node_modules", "./src/examples/", "./test"]
}
