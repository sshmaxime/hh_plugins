{
  "name": "hardhat-migration",
  "version": "0.1.0",
  "description": "Hardhat TypeScript plugin for migration",
  "repository": "github:sshmaxime/hardhat-migration",
  "author": "Maxime Aubanel",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc && cp -r src/examples/* dist/src/examples/ && cp -r src/tasks/* dist/src/tasks/",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@ethersproject/hardware-wallets": "^5.4.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^5.2.6",
    "@types/node": "^16.10.2",
    "chai": "^4.2.0",
    "ethers": "^5.4.7",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.0.0",
    "import": "^0.0.6",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "ts-node": "^10.2.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typechain": "^5.1.2",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  }
}
